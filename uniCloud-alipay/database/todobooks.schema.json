{
	"bsonType": "object",
	"required": ["title", "creator_id", "created_at"],
	"permission": {
		"read": "auth.uid != null",
		"create": "auth.uid != null",
		"update": "auth.uid != null && doc.creator_id == auth.uid",
		"delete": "auth.uid != null && doc.creator_id == auth.uid",
		"count": "auth.uid != null"
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"title": {
			"bsonType": "string",
			"minLength": 1,
			"maxLength": 100,
			"description": "项目册标题"
		},
		"description": {
			"bsonType": "string",
			"maxLength": 500,
			"description": "项目册描述"
		},
		"creator_id": {
			"bsonType": "string",
			"description": "创建者用户ID",
			"forceDefaultValue": {
				"$env": "uid"
			}
		},
		"created_at": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"updated_at": {
			"bsonType": "timestamp",
			"description": "更新时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"color": {
			"bsonType": "string",
			"pattern": "^#[0-9A-Fa-f]{6}$",
			"default": "#007AFF",
			"description": "项目册颜色"
		},
		"icon": {
			"bsonType": "string",
			"default": "folder",
			"description": "项目册图标"
		},
		"is_shared": {
			"bsonType": "bool",
			"default": false,
			"description": "是否共享"
		},
		"share_type": {
			"bsonType": "string",
			"enum": ["private", "public", "member"],
			"default": "private",
			"description": "共享类型：private私有，public公开，member成员"
		},
		"member_count": {
			"bsonType": "int",
			"minimum": 1,
			"default": 1,
			"description": "成员数量"
		},
		"item_count": {
			"bsonType": "int",
			"minimum": 0,
			"default": 0,
			"description": "任务项数量"
		},
		"completed_count": {
			"bsonType": "int",
			"minimum": 0,
			"default": 0,
			"description": "已完成任务数量"
		},
		"sort_order": {
			"bsonType": "int",
			"default": 0,
			"description": "排序顺序"
		},
		"is_archived": {
			"bsonType": "bool",
			"default": false,
			"description": "是否已归档"
		},
		"archived_at": {
			"bsonType": "timestamp",
			"description": "归档时间"
		},
		"last_activity_at": {
			"bsonType": "timestamp",
			"description": "最后活动时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"is_share_template": {
			"bsonType": "bool",
			"default": false,
			"description": "是否为分享模板"
		},
		"template_creator_id": {
			"bsonType": "string",
			"description": "模板创建者ID（仅分享模板使用）"
		},
		"template_created_at": {
			"bsonType": "timestamp",
			"description": "模板创建时间（仅分享模板使用）"
		}
	}
}